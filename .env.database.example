# PostgreSQL Database Configuration
# Copy this to .env.local and update with your values

# For local development with Docker Compose
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/blog_poster

# For production on Digital Ocean (will be set automatically by DO)
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# API Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
API_ENCRYPTION_KEY=

# Enable SQL query logging (development only)
SQL_ECHO=false

# Log level
LOG_LEVEL=INFO