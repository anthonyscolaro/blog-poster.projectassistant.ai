# Blog Poster Service Configuration
# Copy this file to .env.local and update with your actual values

# Optional: System prompt override (defaults to sonnet-3.5-prompt.txt)
# SYSTEM_PROMPT_FILE=./sonnet-3.5-prompt.txt

# === WordPress Configuration ===
# Connection to WordPress site
WORDPRESS_URL=https://staging-wp.servicedogus.org
WORDPRESS_GRAPHQL_ENDPOINT=/graphql

# Authentication method: "basic" for local, "application" for production
WP_AUTH_METHOD=basic

# Authentication (use one method)
# Method 1: Basic Auth (Local Development with JSON Basic Authentication plugin)
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=admin123

# Method 2: JWT Token
# WP_AUTH_TOKEN=your-jwt-token-here
# WP_REFRESH_TOKEN=your-refresh-token-here

# SSL Configuration (for local development with self-signed certs)
WP_VERIFY_SSL=false

# === Database Configuration ===
# PostgreSQL with pgvector for semantic search
POSTGRES_DB=vectors
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis for job queuing and caching
REDIS_PASSWORD=optional-redis-password

# === Content Generation Settings ===
# Article length constraints
ARTICLE_MIN_WORDS=1500
ARTICLE_MAX_WORDS=2500

# Publishing schedule
MAX_ARTICLES_PER_WEEK=3
PUBLISHING_SCHEDULE=0 9 * * MON,WED,FRI

# === Cost Management ===
# API usage limits
MAX_COST_PER_ARTICLE=15.00
MAX_MONTHLY_COST=500.00

# Alert thresholds
COST_ALERT_THRESHOLD=400.00

# === Monitoring & Logging ===
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# === Feature Flags ===
# Enable/disable specific features
ENABLE_COMPETITOR_MONITORING=true
ENABLE_TOPIC_ANALYSIS=true
ENABLE_FACT_CHECKING=true
ENABLE_AUTO_PUBLISH=false
REQUIRE_HUMAN_APPROVAL=true

# === Performance Settings ===
# Rate limiting
API_RATE_LIMIT_PER_MINUTE=60
SCRAPING_DELAY_SECONDS=1.0

# Worker configuration
MAX_WORKERS=4
TASK_TIMEOUT_SECONDS=300

# === Security ===
# Optional: Webhook secret for external triggers
WEBHOOK_SECRET=your-webhook-secret-here

# === External Integrations (Optional) ===
# Slack notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# IndexNow for instant indexing
# INDEXNOW_API_KEY=your-indexnow-key-here

# Google Analytics
# GA_MEASUREMENT_ID=G-XXXXXXXXXX

