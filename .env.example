# ============================================================================
# REQUIRED: PostgreSQL Database (no fallback to file storage)
# ============================================================================
# The application requires PostgreSQL and will not start without it.
# Local development with Docker:
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/blog_poster

# Production (Digital Ocean Managed Database):
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# ============================================================================
# REQUIRED: AI Model API Keys
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here

# ============================================================================
# REQUIRED: Web Scraping APIs
# ============================================================================
JINA_API_KEY=jina_your-key-here
BRIGHT_DATA_API_KEY=your-bright-data-key-here

# ============================================================================
# Vector Database Configuration
# ============================================================================
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=  # For Qdrant Cloud
VECTOR_BACKEND=qdrant

# Redis (optional for caching)
REDIS_URL=redis://localhost:6383/0

# ============================================================================
# REQUIRED: WordPress Configuration
# ============================================================================
WORDPRESS_URL=https://servicedogus.org
WP_USERNAME=admin
WP_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx
WP_VERIFY_SSL=true  # Set to false only for local development

# ============================================================================
# Security Configuration
# ============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; import base64; print(base64.b64encode(Fernet.generate_key()).decode())"
API_ENCRYPTION_KEY=

# ============================================================================
# Cost Management
# ============================================================================
MAX_COST_PER_ARTICLE=2.00
MAX_MONTHLY_COST=100.00

# ============================================================================
# Article Configuration
# ============================================================================
ARTICLE_MIN_WORDS=1500
ARTICLE_MAX_WORDS=3000

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8088
LOG_LEVEL=INFO
SQL_ECHO=false  # Set to true to log SQL queries (development only)