# AI Model API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# System Prompt Configuration
# Option 1: Load from file (recommended for production)
SYSTEM_PROMPT_FILE=./sonnet-3.5-prompt.txt

# Option 2: Inline prompt (for testing - escape quotes and newlines)
# SYSTEM_PROMPT="SYSTEM ROLE: Article Generation Agent..."

# Web Scraping APIs
JINA_API_KEY=jina_your-key-here
BRIGHT_DATA_API_KEY=your-bright-data-key-here

# Database Configuration
DATABASE_URL=postgresql://bloguser:blogpass@localhost:5433/blogposter
REDIS_URL=redis://localhost:6383/0
QDRANT_URL=http://localhost:6333

# Vector Backend (qdrant, pgvector, or memory)
VECTOR_BACKEND=qdrant

# WordPress Configuration
WORDPRESS_URL=http://localhost:8084
WORDPRESS_GRAPHQL_ENDPOINT=/graphql
WORDPRESS_REST_ENDPOINT=/wp-json/wp/v2
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=admin123
WP_AUTH_TOKEN=

# Post-Publish Automation
INDEXNOW_KEY=your-indexnow-key
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=your-wp-auth-token

# Agent Configuration
MONITORING_SCHEDULE=0 */6 * * *  # Every 6 hours
PUBLISHING_SCHEDULE=0 9 * * MON,WED,FRI  # MWF at 9am
MAX_ARTICLES_PER_WEEK=3
ARTICLE_MIN_WORDS=1500
ARTICLE_MAX_WORDS=2500

# Service Configuration
API_HOST=0.0.0.0
API_PORT=8088
LOG_LEVEL=INFO

# Cost Limits
MAX_COST_PER_ARTICLE=15.00
MAX_MONTHLY_COST=500.00